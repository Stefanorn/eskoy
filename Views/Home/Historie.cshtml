@model Eskoy.Models.ViewModels.HistoryViewModel
<div id="myCarousel" class="carousel slide slide-me-in" data-ride="carousel">

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
          <div class="item active">
            <img src="~/images/historyBanner2.jpeg" alt="Image">
            <div class="carousel-caption">
              <h1>@Model.CaroselTitle</h1>
            </div>      
          </div>
    
          <div class="item">
            <img src="~/images/historyBanner1.jpeg" alt="Image">
            <div class="carousel-caption">
                <h1>@Model.CaroselTitle</h1>
            </div>
          </div>
        </div>
    
        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
          <span class="" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
          <span class="" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
</div>
<h2 hidden class="show-on-small-screens text-center">@Model.CaroselTitle</h2>
<div class="container padding-top-50">
    @for( int i = 0; i < Model.Cards.Count; i++)
    {
        @if( i%2 == 0 )
        {
    <div class="row slide-me-in-secound">
        <div class="col-lg-7 col-md-6 col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h3>@Model.Cards[i].Title</h3>
                </div>
                <div class="card-body">
                    <blockquote class="blockquote mb-0">
                        <p> @Model.Cards[i].Body </p> 
                            <div class="collapse" id="valdimar-h-more-info">
                                    <div class="card card-body">
                                        @Model.Cards[i].Body 
                                    </div>
                            </div>
                            <button class="btn btn-secondary" type="button" data-toggle="collapse" data-target="#valdimar-h-more-info" aria-expanded="false" aria-controls="collapseExample">
                                    @Model.Cards[i].ReadMore
                            </button>
                    </blockquote>
                </div>
            </div>
        </div>
        <div class="col-lg-5 col-md-6 col-sm-12">
            <img src="@Model.Cards[i].Image" alt="image" class="fit-to-div img-rounded">
        </div>
    </div>
        }
        else
        {
    <div class="row slide-me-in-third padding-top-50">
           <div class="col-lg-5 col-md-6 col-sm-12 hide-on-med-screens">
                <img src="@Model.Cards[i].Image" alt="image" class="fit-to-div img-rounded">
            </div>
            <div class="col-lg-7 col-md-6 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h3>@Model.Cards[i].Title</h3>
                    </div>
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                            <p> @Model.Cards[i].Body</p>
                                <div class="collapse" id="saga-k-more-info">
                                        <div class="card card-body">
                                            @Model.Cards[i].Body
                                        </div>
                                </div>
                                <button class="btn btn-secondary" type="button" data-toggle="collapse" data-target="#saga-k-more-info" aria-expanded="false" aria-controls="collapseExample">
                                        @Model.Cards[i].ReadMore
                                </button>
                        </blockquote>
                    </div>
                </div>
            </div>
            <div hidden class="col-lg-5 col-md-6 col-sm-12 show-on-med-screens">
                    <img src="@Model.Cards[i].Image" alt="image" class="fit-to-div img-rounded">
                </div>
        </div>
        }
    }
</div>
    